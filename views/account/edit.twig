{% extends '_layouts/main.twig' %}

{% block title %}Edit Account{% endblock %}

{% block main %}

	<h3>Edit Account</h3>


	<div class="input-prepend">
		<span class="add-on" style="width:125px;">Username</span>
		<span class="uneditable-input" style="width:150px;">{{ user.name }}</span>
	</div>

	<hr>

	<form action="/account/save" method="POST">
		
		<h4>Update Password <small>optional</small></h4>
		<div class="input-prepend">
			<span class="add-on" style="width:125px;">New Password</span>
			<input style="width:150px;" type="password" name="newPassword"  >
		</div>

		<div class="input-prepend">
			<span class="add-on" style="width:125px;">Verify Password</span>
			<input style="width:150px;" type="password" name="verifyPassword"  >
		</div>

		<hr>
		
		<button type="submit" class="btn btn-primary">Update</button>
		<a href="/" class="btn">Cancel</a>

	</form>

{% endblock %}
